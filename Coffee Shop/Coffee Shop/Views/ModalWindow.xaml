<Window x:Class="Coffee_Shop.Views.ModalWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Coffee_Shop.Views"
        mc:Ignorable="d"
        Background="Transparent"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen"
        Title="ModalWindow" Height="100" Width="200">
    <Border CornerRadius="13" Background="#191B1D">
        <Border CornerRadius="10" BorderThickness="2">
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#363636" Offset="0"/>
                    <GradientStop Color="#CFB73E" Offset="0.75"/>
                    <GradientStop Color="#E1CA52" Offset="1"/>
                </LinearGradientBrush>
            </Border.BorderBrush>
            <StackPanel>
                <Button Style="{StaticResource ButtonClose}" Click="Button_Click" HorizontalAlignment="Right" Margin="5"/>
                <TextBlock x:Name="textBlock" Margin="10" TextWrapping="Wrap"/>
            </StackPanel>
        </Border>
    </Border>
</Window>
