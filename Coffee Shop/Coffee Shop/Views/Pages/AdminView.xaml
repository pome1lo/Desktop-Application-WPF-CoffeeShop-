    <Page.Triggers>
        <EventTrigger RoutedEvent="Loaded">
            <BeginStoryboard Storyboard="{StaticResource Storyboard1}"/>
        </EventTrigger>
    </Page.Triggers>
    <Page.RenderTransform>
        <TransformGroup>
            <ScaleTransform/>
            <SkewTransform/>
            <RotateTransform/>
            <TranslateTransform/>
        </TransformGroup>
    </Page.RenderTransform>
    <Page.DataContext>
        <vm:AdminViewModel/>
    </Page.DataContext>
    <StackPanel>
        <StackPanel Orientation="Horizontal" Margin="20">
            <StackPanel.Resources>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Defaults.xaml" />
            </StackPanel.Resources>
            <StackPanel Orientation="Vertical">

                <custom:AdminButton ImgSource="/StaticFiles/Img/Users.png"
                                    x:Name="radioUsers"
                                    Text="{DynamicResource Admin_ButUserDatabase}" RenderTransformOrigin="0.5,0.5">
                    <custom:AdminButton.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </custom:AdminButton.RenderTransform>
                </custom:AdminButton>
                <custom:AdminButton ImgSource="/StaticFiles/Img/Products.png"
                                    x:Name="radioProducts"
                                    Text="{DynamicResource Admin_ButProductDatabase}" RenderTransformOrigin="0.5,0.5">
                    <custom:AdminButton.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </custom:AdminButton.RenderTransform>
                </custom:AdminButton>
                <custom:AdminButton ImgSource="/StaticFiles/Img/News.png"
                                    x:Name="radioNews"
                                    Text="{DynamicResource Admin_ButNewsDatabase}" RenderTransformOrigin="0.5,0.5">
                    <custom:AdminButton.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </custom:AdminButton.RenderTransform>
                </custom:AdminButton>

                <Button x:Name="button" Command="{Binding ShowAddNewUserCommand}"
                            Style="{StaticResource AdminMenuButton}" RenderTransformOrigin="0.5,0.5">
                    <Button.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </Button.RenderTransform>
                    <DockPanel>
                        <Image Source="/StaticFiles/Img/AddUser.png" Width="25" Margin="10 0"/>
                        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" Text="{DynamicResource Admin_ButAddNewUser}"/>
                    </DockPanel>
                </Button>
                <Button x:Name="button1" Command="{Binding ShowAddNewProductCommand}"
                            Style="{StaticResource AdminMenuButton}" RenderTransformOrigin="0.5,0.5">
                    <Button.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </Button.RenderTransform>
                    <DockPanel>
                        <Image Source="/StaticFiles/Img/AddProduct.png" Width="25" Margin="10 0"/>
                        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" Text="{DynamicResource Admin_ButAddNewProduct}"/>
                    </DockPanel>
                </Button>
                <Button x:Name="button2" Command="{Binding ShowAddNewNewsCommand}"
                            Style="{StaticResource AdminMenuButton}" RenderTransformOrigin="0.5,0.5">
                    <Button.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </Button.RenderTransform>
                    <DockPanel>
                        <Image Source="/StaticFiles/Img/AddNews.png" Width="25" Margin="10 0"/>
                        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" Text="{DynamicResource Admin_ButAddNewNews}"/>
                    </DockPanel>
                </Button>

                <custom:AdminButton ImgSource="/StaticFiles/Img/Other.png"
                                    x:Name="radioOther"
                                    Text="{DynamicResource Admin_ButOther}" RenderTransformOrigin="0.5,0.5">
                    <custom:AdminButton.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </custom:AdminButton.RenderTransform>
                </custom:AdminButton>
            </StackPanel>

            <StackPanel Margin="20 0 0 0" Width="620" Style="{DynamicResource Visible/HidenUsers}">
                <Button Command="{Binding DeleteUserCommand}" 
                        Content="{DynamicResource Admin_DeleteUser}"
                        Style="{StaticResource ButtonBlack}"
                        Width="200"/>
                <DataGrid Background="Transparent" Foreground="White" 
                          ItemsSource="{Binding Users, UpdateSourceTrigger=PropertyChanged}"
                          SelectedItem="{Binding SelectedItemForUsersDB}">
                    <DataGrid.Resources>
                        <Style BasedOn="{StaticResource {x:Type DataGridColumnHeader}}" TargetType="{x:Type DataGridColumnHeader}">
                            <Setter Property="Foreground" Value="White" />
                        </Style>
                    </DataGrid.Resources>
                </DataGrid>
            </StackPanel>

            <StackPanel Margin="20 0 0 0" Width="620" Style="{DynamicResource Visible/HidenProducts}">
                <Button Command="{Binding DeleteProductCommand}"
                        Content="{DynamicResource Admin_DeleteProduct}" 
                        Style="{StaticResource ButtonBlack}"
                        Width="200"/>
                <DataGrid Background="Transparent" Foreground="White" 
                          ItemsSource="{Binding Products, UpdateSourceTrigger=PropertyChanged}" 
                          SelectedItem="{Binding SelectedItemForProductsDB}">
                    <DataGrid.Resources>
                        <Style BasedOn="{StaticResource {x:Type DataGridColumnHeader}}" TargetType="{x:Type DataGridColumnHeader}">
                            <Setter Property="Foreground" Value="White" />
                        </Style>
                    </DataGrid.Resources>
                </DataGrid>
            </StackPanel>

            <StackPanel Margin="20 0 0 0" Width="620" Style="{DynamicResource Visible/HidenNews}">
                <Button Command="{Binding DeleteNewsCommand}"
                        Content="{DynamicResource Admin_DeleteNews}"
                        Style="{StaticResource ButtonBlack}"
                        Width="200"/>
                <DataGrid  Background="Transparent"
                           ItemsSource="{Binding News, UpdateSourceTrigger=PropertyChanged}" 
                           SelectedItem="{Binding SelectedItemForNewsDB}">
                    <DataGrid.Resources>
                        <Style BasedOn="{StaticResource {x:Type DataGridColumnHeader}}" TargetType="{x:Type DataGridColumnHeader}">
                            <Setter Property="Foreground" Value="White" />
                        </Style>
                    </DataGrid.Resources>
                </DataGrid>
            </StackPanel>

            <StackPanel Margin="20 0 0 0" Style="{StaticResource Visible/HidenOther}">

                <!--<RadioButton Content=".en-US"/>
                <RadioButton Content=".ru-RU"/>-->


                <!--<RadioButton Content="Dark"/>
                <RadioButton Content="Light"/>-->

                <TextBlock Text="{DynamicResource Admin_TextLanguage}"
                           Style="{StaticResource TextBlockAbout}"
                           HorizontalAlignment="Left"/>

                <ComboBox SelectedItem="{Binding Language, UpdateSourceTrigger=PropertyChanged}"
                          Style="{DynamicResource MaterialDesignComboBox}"
                          Background="Transparent">
                    <ComboBoxItem Content=".en-US" Background="Transparent"/>
                    <ComboBoxItem Content=".ru-RU" Background="Transparent"/>
                </ComboBox>

                <TextBlock Text="{DynamicResource Admin_TextTheme}" 
                           Style="{StaticResource TextBlockAbout}"
                           HorizontalAlignment="Left"/>
                <ComboBox SelectedItem="{Binding Theme, UpdateSourceTrigger=PropertyChanged}"
                          Background="Transparent">
                    <ComboBoxItem Content="Dark"/>
                    <ComboBoxItem Content="Light"/>
                </ComboBox>

            </StackPanel>
        </StackPanel>
    </StackPanel>
</Page>
