                    </ListView>
                    <TextBlock Text="{StaticResource Basket_SymbTotal}"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="{DynamicResource Basket_Total}" Padding="6 0 0 0"/>
