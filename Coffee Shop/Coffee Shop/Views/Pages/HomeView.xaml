    <Page.DataContext>
        <vm:HomeViewModel/>
    </Page.DataContext>
    <Page.Triggers>
        <EventTrigger RoutedEvent="Loaded">
            <BeginStoryboard Storyboard="{StaticResource Storyboard1}"/>
        </EventTrigger>
    </Page.Triggers>
    <ScrollViewer x:Name="scrollViewer" Height="535" CanContentScroll="True" VerticalScrollBarVisibility="Hidden">
        <StackPanel>
            <Border Height="535">
                <Border.Background>
                    <VisualBrush>
                        <VisualBrush.Visual>
                            <MediaElement Source="D:\FILES\Курсачи\Мои курсачи\ООП 2-2\Coffee Shop\Coffee Shop\StaticFiles\Videos\background.avi" 
                                          LoadedBehavior="Play" 
                                         Stretch="UniformToFill"
                                          Grid.Column="1"
                                          />
                        </VisualBrush.Visual>
                    </VisualBrush>
                </Border.Background>
                <StackPanel VerticalAlignment="Center" Width="400" HorizontalAlignment="Left" Margin="20 0 0 0">
                    <TextBlock x:Name="textBlock" Text="{DynamicResource Home_GetInsoired}" 
                               FontSize="25" FontWeight="ExtraBlack" 
                               FontFamily="Segoe UI Black" 
                               TextWrapping="Wrap" Margin="5" RenderTransformOrigin="0.5,0.5">
                        <TextBlock.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </TextBlock.RenderTransform>
                    </TextBlock>
                    <TextBlock x:Name="textBlock1" Text="{DynamicResource Home_SweetWorld}" 
                               FontSize="40" FontWeight="Bold" Margin="5"
                               FontFamily="Bell MT" TextWrapping="Wrap" RenderTransformOrigin="0.5,0.5">
                        <TextBlock.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </TextBlock.RenderTransform>
                    </TextBlock>
                    <TextBlock x:Name="textBlock2" Text="{DynamicResource Home_Quote}" Margin="5" TextWrapping="Wrap" RenderTransformOrigin="0.5,0.5">
                        <TextBlock.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </TextBlock.RenderTransform>
                    </TextBlock>
                    <Button x:Name="button" Content="{DynamicResource Home_Button}"
                            Style="{StaticResource ButtonBlack}"
                            Margin="5"
                            Width="200" HorizontalAlignment="Left" RenderTransformOrigin="0.5,0.5">
                        <Button.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </Button.RenderTransform>
                    </Button>

                </StackPanel>
            </Border>
            <TextBlock Text="{DynamicResource Home_News}" FontSize="25" FontWeight="Bold" Margin="20" HorizontalAlignment="Center"/>
            <ListView ItemsSource="{Binding News}" HorizontalContentAlignment="Center" Width="720">
                <ListView.Style>
                    <Style TargetType="ListView">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="BorderThickness" Value="0"/>
                    </Style>
                </ListView.Style>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="#CFB73E" Width="700"
                                BorderThickness="0 0 0 1"
                                Margin="0 10"
                                Padding="0 0 0 20"
                                HorizontalAlignment="Center">
                            <Grid Background="Transparent" Margin="0" Width="650">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="130"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Image Source="{Binding Img}" Width="100" Height="100" Margin="0 0 30 0"/>
                                <StackPanel Orientation="Vertical" Grid.Column="1">
                                    <TextBlock Text="{Binding Title}" TextWrapping="Wrap" FontWeight="Bold" FontSize="15" Padding="0 0 0 10"/>
                                    <TextBlock Text="{Binding Content}" TextWrapping="Wrap" TextAlignment="Justify" FontSize="11" Padding="0 0 0 10"/>
                                    <TextBlock Text="{Binding Date, StringFormat=d}" TextWrapping="Wrap" FontSize="11" Padding="0 0 0 10"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>
    </ScrollViewer>
</Page>
